{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "types": ["bun-types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@auth": ["./src/lib/auth/auth.ts"],
      "@auth/*": ["./src/lib/auth/*"],
      "@config": ["./src/config/"],
      "@db": ["./src/lib/drizzle/db"],
      "@package.json": ["./package.json"],
      "@plugins/*": ["./src/plugins/*"],
      "@modules": ["./src/modules/index.ts"],
      "@modules/*": ["./src/modules/*"],
      "@setup": ["./src/setup.ts"],
      "@templates/*": ["./src/lib/templates/*"],
      "@types": ["./src/lib/types/"],
      "@utils": ["./src/lib/utils/"],
      "@utils/*": ["./src/lib/utils/*"]
    }
  }
}
